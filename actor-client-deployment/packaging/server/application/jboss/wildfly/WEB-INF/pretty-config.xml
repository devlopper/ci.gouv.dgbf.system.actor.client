<pretty-config xmlns="http://ocpsoft.org/schema/rewrite-config-prettyfaces" 
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
  xsi:schemaLocation="http://ocpsoft.org/schema/rewrite-config-prettyfaces
                      http://ocpsoft.org/xml/ns/prettyfaces/rewrite-config-prettyfaces.xsd">

	<url-mapping id="identification">
		<pattern value="/identification" />
		<view-id value="/public/identification/index.jsf" />
	</url-mapping>

	<url-mapping id="demande_compte">
		<pattern value="/demande_compte" />
		<view-id value="/public/accountrequest/edit.jsf" />
	</url-mapping>
	
	<url-mapping id="notification_demande_compte">
		<pattern value="/notification_demande_compte" />
		<view-id value="/public/accountrequest/notifyaftercreate.jsf" />
	</url-mapping>
	
	<url-mapping id="liste_demandes">
		<pattern value="/liste_demandes" />
		<view-id value="/private/accountrequest/list.jsf" />
	</url-mapping>
	
	<url-mapping id="liste_demandes_rejetees">
		<pattern value="/liste_demandes_rejetees" />
		<view-id value="/private/rejectedaccountrequest/list.jsf" />
	</url-mapping>
	
	<url-mapping id="liste_comptes">
		<pattern value="/liste_comptes" />
		<view-id value="/private/account/list.jsf" />
	</url-mapping>
	
	<!--  -->
	
	<url-mapping id="mon_compte">
		<pattern value="/mon_compte" />
		<view-id value="/private/myaccount/index.jsf" />
	</url-mapping>
	
	<url-mapping id="mes_visibilites">
		<pattern value="/mes_visibilites" />
		<view-id value="/private/actor/loggedin/listscopes.jsf" />
	</url-mapping>
	
	<url-mapping id="modifier_mot_passe">
		<pattern value="/modifier_mot_passe" />
		<view-id value="/private/myaccount/editpass.jsf" />
	</url-mapping>
	
	<url-mapping id="mes_preferences">
		<pattern value="/mes_preferences" />
		<view-id value="/private/myaccount/preferences.jsf" />
	</url-mapping>
	
	<url-mapping id="mon_profile">
		<pattern value="/mon_profile" />
		<view-id value="/private/myaccount/profile.jsf" />
	</url-mapping>
	
</pretty-config>