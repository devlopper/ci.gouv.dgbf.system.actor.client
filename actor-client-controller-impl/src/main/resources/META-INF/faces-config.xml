<?xml version="1.0" encoding="UTF-8"?>
<faces-config version="2.2" xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">

	<!-- Do use PrettyFaces ONLY for navigation -->

	<navigation-rule>
		<from-view-id>*</from-view-id>
		
		<navigation-case>
			<from-outcome>actorListView</from-outcome>
			<to-view-id>/private/actor/list.jsf</to-view-id>
			<redirect />
		</navigation-case>
		
		<navigation-case>
			<from-outcome>actorCreateView</from-outcome>
			<to-view-id>/private/actor/create.jsf</to-view-id>
			<redirect />
		</navigation-case>
		
		<navigation-case>
			<from-outcome>actorEditPrivilegesView</from-outcome>
			<to-view-id>/private/actor/editprivileges.jsf</to-view-id>
			<redirect />
		</navigation-case>
		
		<navigation-case>
			<from-outcome>actorEditScopesView</from-outcome>
			<to-view-id>/private/actor/editscopes.jsf</to-view-id>
			<redirect />
		</navigation-case>
		
		<navigation-case>
			<from-outcome>actorScopeCreateView</from-outcome>
			<to-view-id>/private/actorscope/create.jsf</to-view-id>
			<redirect />
		</navigation-case>
		
		<navigation-case>
			<from-outcome>profileEditPrivilegesView</from-outcome>
			<to-view-id>/private/profile/editprivileges.jsf</to-view-id>
			<redirect />
		</navigation-case>
	</navigation-rule>

</faces-config>